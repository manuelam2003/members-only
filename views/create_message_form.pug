extends layout 

block content 
  h1=title
  form#submit-form(method="POST")
    if currentUser.membership_status
      div.form-group
        label(for="title") Title: 
        input#title.form-control(type="text" placeholder="Enter title" name="title" required value=(message===undefined?"":message.title))  
      div.form-group
        label(for="messageText") Message: 
        input#messageText.form-control(type="text" placeholder="Enter message" name="messageText" required value=(message===undefined?"":message.text))  
      if errors 
        h3 Errors
        ul 
          for error in errors 
            li!=error.msg
      button.btn.btn-primary(type="submit") Send Message
    else
      p(style="color:rgb(212, 179, 28)") To create messages, you need to be a #[a(href="/become-member", style="text-decoration: none; color:#fff") Member]!
